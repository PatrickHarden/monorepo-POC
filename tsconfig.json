{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "target": "es6",
      "sourceMap": true,
      "jsx": "react",
      "skipLibCheck": true,
      "lib": [
        "es6",
        "dom"
      ]
    },
    "include": [
      "./src/ts/**/*",
      "./src/tsx/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "**/*.stories.tsx",
      "**/*.stories.ts",
      "**/*.stories.mdx"
    ]
}